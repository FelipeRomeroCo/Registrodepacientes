<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Examenes">

    <TextView
        android:id="@+id/txtNombreDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Nombre y Apellidos"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#00ACC1"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalleExamen3" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00ACC1"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="@+id/btnEditar"
        app:layout_constraintStart_toStartOf="@+id/btnEditar"
        app:layout_constraintTop_toBottomOf="@+id/btnEditar" />

    <TextView
        android:id="@+id/tvRut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="Rut"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreDetalle" />

    <TextView
        android:id="@+id/tvFechaDeNacimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fecha de nacimiento"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvRut"
        app:layout_constraintTop_toBottomOf="@+id/tvRut" />

    <TextView
        android:id="@+id/tvSexo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Sexo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvRut"
        app:layout_constraintStart_toEndOf="@+id/tvFechaDeNacimiento"
        app:layout_constraintTop_toBottomOf="@+id/tvRut" />

    <TextView
        android:id="@+id/tvExamenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ExÃ¡menes"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaDeNacimiento" />

    <TextView
        android:id="@+id/tvDetalleExamen1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:text="Examen 1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExamenes" />

    <TextView
        android:id="@+id/tvDetalleExamen2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Examen 2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDetalleExamen1"
        app:layout_constraintStart_toStartOf="@+id/tvDetalleExamen1"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalleExamen1" />

    <TextView
        android:id="@+id/tvDetalleExamen3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Examen 3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDetalleExamen2"
        app:layout_constraintStart_toStartOf="@+id/tvDetalleExamen2"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalleExamen2" />
</androidx.constraintlayout.widget.ConstraintLayout>